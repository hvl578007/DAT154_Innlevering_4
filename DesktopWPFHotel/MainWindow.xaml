<Window x:Class="DesktopWPFHotel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopWPFHotel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
		<StackPanel Name="BTNStack">
			<!--Må lage knapper og textbokser-->
			
			<!--søk på brukernavn-->
			<Grid>
				<TextBox Name="UserName"></TextBox>
				<Button Name="UserNameBTN" Content="Search"></Button>
			</Grid>

			<!--søk på romnummer-->
			<Grid>
				<TextBox Name="RoomNr"></TextBox>
				<Button Name="RoomNrBTN" Content="Search"></Button>
			</Grid>
			
			
			<Button Name="AllRoms" Click="Reservation_Button" Content="See All Rooms"></Button>
		    <Button Name="NyRes" Click="Reservation_Button" Content="Ny Reservasjon"></Button>
		</StackPanel>
	</Grid>
</Window>
