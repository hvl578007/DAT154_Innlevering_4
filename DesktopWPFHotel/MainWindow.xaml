<Window x:Class="DesktopWPFHotel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopWPFHotel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
		<StackPanel Name="BTNStack">
			<!--Må lage knapper og textbokser-->
			
			<!--søk på brukernavn-->
			<Grid>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Please enter username: " />
                    <TextBox Name="UserName" Text="" Width="591" />
                </StackPanel>
                <Button x:Name="UserNameBTN" Content="Search user" HorizontalAlignment="Right" Click="UserSearch_Button"/>
            </Grid>

			<!--søk på romnummer-->
            <Grid>
			<StackPanel Orientation="Horizontal">
                <Label Content="Room id: " />
                <TextBox Name="RoomNr" Width="660"/>
            </StackPanel>
            <Button Name="RoomNrBTN" Content="Search room" Click="RoomInfo_Button" HorizontalAlignment="Right"></Button>
            </Grid>

            <Button Name="AllRoms"  Content="See All Rooms"></Button>
		    <Button Name="NyRes" Click="Reservation_Button" Content="Ny Reservasjon"></Button>
		</StackPanel>
	</Grid>
</Window>
