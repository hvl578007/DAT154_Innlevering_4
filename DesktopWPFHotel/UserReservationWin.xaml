<Window x:Class="DesktopWPFHotel.UserReservationWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopWPFHotel"
        mc:Ignorable="d"
        Title="UserReservationWin" Height="450" Width="800">
    <Grid>
        <ListView Name="ReservationList" ItemsSource="{Binding}" Margin="0,43,0,0">
            <ListView.View>
                <GridView>
                    <GridView.Columns>
                        <GridViewColumn Width="100" Header="ReservationId" DisplayMemberBinding="{Binding Path=ReservationId}"/>
                        <GridViewColumn Width="100" Header="RoomId" DisplayMemberBinding="{Binding Path=RoomRoomId}"/>
                        <GridViewColumn Width="100" Header="Start date" DisplayMemberBinding="{Binding Path=DateStart}"/>
                    </GridView.Columns>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
